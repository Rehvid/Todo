{% extends 'layouts/guest.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="h3 mb-4 text-center">Register</h1>


    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}


        <button type="submit" class="btn my-2 btn-dark w-100">Register</button>
        <a class="btn btn-link w-100 d-flex justify-content-center" href="{{ path('app_login') }}" >Login</a>
    {{ form_end(registrationForm) }}
{% endblock %}
